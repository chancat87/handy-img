{
  "name": "handy-img",
  "version": "0.0.2",
  "description": "handy img tool and API",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "bin": {
    "handy-img": "./bin/handy-img",
    "himg": "./bin/handy-img"
  },
  "files": [
    "bin",
    "lib",
    "types",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "tsc": "tsc --incremental",
    "build": "rm -rf lib; rm -rf types; tsc",
    "prepublishOnly": "yarn run build",
    "test": "mocha",
    "test-cover": "nyc --reporter=lcov --reporter=text mocha",
    "test-cover-ci": "nyc npm test && nyc report --reporter=text-lcov > coverage.lcov",
    "report-cover": "codecov",
    "gen-readme": "swig render ./readme/readme.md > README.md && prettier --write README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/magicdawn/handy-img.git"
  },
  "keywords": [
    "handy-img",
    "img",
    "sharp",
    "resize",
    "compress",
    "mozjpeg"
  ],
  "author": "magicdawn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/magicdawn/handy-img/issues"
  },
  "homepage": "https://github.com/magicdawn/handy-img#readme",
  "dependencies": {
    "@types/sharp": "^0.26.0",
    "fs-extra": "^9.0.0",
    "node-mozjpeg": "^0.3.2",
    "sharp": "^0.26.2",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@magicdawn/eslint-config": "latest",
    "@magicdawn/prettier-config": "latest",
    "@types/eslint": "^7.2.4",
    "@types/fs-extra": "^9.0.2",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.2",
    "@types/prettier": "^2.1.5",
    "@types/yargs": "^15.0.9",
    "codecov": "^3.8.0",
    "eslint": "^7.11.0",
    "husky": "latest",
    "lint-staged": "latest",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "prettier": "latest",
    "should": "^13.2.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,less,vue}": [
      "prettier --write"
    ]
  }
}
